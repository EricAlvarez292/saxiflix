<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.saxipapsi.saxi_movie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Saxi_movie"
        tools:targetApi="31">
        <activity
            android:name=".presentation.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label=""
            android:theme="@style/Theme.Saxi_movie.NoActionBar" />
        <activity
            android:name=".presentation.VideoActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label=""
            android:theme="@style/Theme.Saxi_movie.NoActionBar" />
        <activity
            android:name=".presentation.get_content_details.components.ContentDetailsActivity"
            android:exported="false"
            android:label=""
            android:theme="@style/Theme.Saxi_movie.NoActionBar" />
        <activity
            android:name=".presentation.SplashActivity"
            android:exported="true"
            android:label=""
            android:theme="@style/Theme.Saxi_movie.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>